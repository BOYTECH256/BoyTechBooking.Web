@model IEnumerable<BookingViewModel>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        <h3>You have no booked tickets.</h3>
    </div>
}
else
{
    foreach (var booking in Model)
    {
        <div class="card mb-4" id="booking-@booking.BookingId">
            <div class="card-header">
                Booking ID: @booking.BookingId - Date: @booking.BookingDate.ToString("dd/MM/yyyy")
            </div>
            <div class="card-body">
                <h5 class="card-title">Concert: @booking.ConcertName</h5>
                <ul class="list-group">
                    @foreach (var ticket in booking.Tickets)
                    {
                        <li class="list-group-item">Seat Number: @ticket.SeatNumber</li>
                    }
                </ul>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" onclick="printTicket(@booking.BookingId)">
                    Print Ticket
                </button>
            </div>
        </div>
    }
}

@section Scripts {
    <script>
        function printTicket(bookingId) {
            // Get the booking card element dynamically
            var element = document.getElementById('booking-' + bookingId);

            if (!element) {
                alert("Booking not found!");
                return;
            }

            // Temporarily hide everything else
            var allContent = document.body.innerHTML;
            var printContent = element.outerHTML;

            document.body.innerHTML = printContent;
            window.print();

            // Restore the page after printing
            document.body.innerHTML = allContent;
            location.reload(); // Optional: reload to restore event bindings
        }
    </script>
}
