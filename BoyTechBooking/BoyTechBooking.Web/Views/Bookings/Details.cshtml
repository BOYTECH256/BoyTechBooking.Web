@model BookingViewModel
@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking #@Model.BookingId</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("f")</dd>

        <dt class="col-sm-2">Concert</dt>
        <dd class="col-sm-10">@Model.ConcertName</dd>

        <dt class="col-sm-2">Tickets</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var t in Model.Tickets)
                {
                    <li>Seat @t.SeatNumber</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="MyBookings">Back to My Bookings</a>
</p>