@model CreateBookingViewModel
@{
    ViewData["Title"] = "Create Booking(Admin)";
}

<h1>Create Booking</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ConcertId">Concert</label>
        <select asp-for="ConcertId" class="form-control" asp-items="ViewBag.Concerts"></select>
    </div>

    <div class="form-group">
        <label asp-for="ApplicationUserId">User</label>
        <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.Users"></select>
    </div>

    <div class="form-group">
        <label>Seat numbers (optional, comma separated)</label>
        <input type="text" name="SeatNumbersCsv" class="form-control" />
        <small class="form-text text-muted">Example: 1,2,3</small>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}