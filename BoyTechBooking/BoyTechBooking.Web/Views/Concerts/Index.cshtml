@model IEnumerable<ConcertViewModel>

@{
    ViewData["Title"] = "Concerts";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">🎵 Upcoming Concerts</h2>

    <form asp-controller="Concerts" asp-action="Index" method="post" id="multiPayForm">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th style="width:40px;">
                    <input type="checkbox" id="selectAllConcerts" title="Select all" />
                </th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().ArtistName)</th>
                <th>@Html.DisplayNameFor(model => model.First().VenueName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Date)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var concert in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedConcertIds" value="@concert.Id" class="select-concert" />
                        </td>
                        <td>@concert.Name</td>
                        <td>@concert.ArtistName</td>
                        <td>@concert.VenueName</td>
                        <td>@concert.Date.ToString("MMMM dd, yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@concert.Id" class="btn btn-info btn-sm">View</a>
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a class="btn btn-outline-info btn-sm ms-1"
                                   href="/Payment/Start?concertId=@concert.Id"
                                   title="Pay & Book this concert">Pay&Book</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-info btn-sm ms-1" asp-area="Identity" asp-page="/Account/Login">Sign in to Pay</a>
                            }


                            @if (User.IsInRole("Admin"))
                            {
                                <div class="mt-3">

                                    <a asp-controller="Concerts" asp-action="Edit" asp-route-id="@concert.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-controller="Concerts" asp-action="MyTickets" asp-route-id="@concert.Id" class="btn btn-warning btn-sm">GetTickets</a>
                                    <a asp-controller="Concerts" asp-action="Delete" asp-route-id="@concert.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Delete this concert?');">Delete</a>
                                </div>
                            }
                        </td>
                        
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No concerts found.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success" id="paySelectedBtn">Pay & Book Selected</button>
    </div>
      </form>
    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mt-3">
            <a asp-action="Create" class="btn btn-success">Add New Concert</a>
        </div>
    }

    
</div>
@section Scripts {
    <script>
        (function () {
            const selectAll = document.getElementById('selectAllConcerts');
            const checkboxes = document.querySelectorAll('.select-concert');
            const payBtn = document.getElementById('paySelectedBtn');
            const form = document.getElementById('multiPayForm');

            selectAll?.addEventListener('change', function () {
                checkboxes.forEach(cb => cb.checked = selectAll.checked);
            });

            form?.addEventListener('submit', function (e) {
                // require at least one selection for non-admin users
                const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
                if (!anyChecked) {
                    e.preventDefault();
                    alert('Please select at least one concert to pay for.');
                }
            });
        })();
    </script>
}